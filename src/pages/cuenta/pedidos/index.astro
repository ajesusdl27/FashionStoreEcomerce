---
import PublicLayout from "@/layouts/PublicLayout.astro";
import { supabase } from "@/lib/supabase";
import { formatOrderId } from "@/lib/order-utils";
import { formatPrice } from "@/lib/formatters";
import { Package, ChevronRight, ArrowLeft, Filter, ShoppingBag } from "lucide-react";

const user = Astro.locals.user;

// This page is protected by middleware
if (!user) {
  return Astro.redirect("/cuenta/login");
}

// Get filter from URL
const statusFilter = Astro.url.searchParams.get("status");

// Build query
let query = supabase
  .from("orders")
  .select(
    `
    *,
    order_number,
    order_items(
      price_at_purchase,
      quantity,
      product:products(
        name,
        images:product_images(image_url)
      )
    )
  `,
  )
  .eq("customer_email", user.email)
  .order("created_at", { ascending: false });

// Apply status filter
if (statusFilter && statusFilter !== "all") {
  query = query.eq("status", statusFilter);
}

const { data: orders } = await query;

function formatDate(date: string): string {
  return new Intl.DateTimeFormat("es-ES", {
    dateStyle: "medium",
  }).format(new Date(date));
}

function getStatusBadge(status: string) {
  const badges: Record<string, { class: string; text: string }> = {
    pending: { class: "bg-yellow-500/20 text-yellow-400", text: "Pendiente" },
    paid: { class: "bg-emerald-500/20 text-emerald-400", text: "Pagado" },
    shipped: { class: "bg-blue-500/20 text-blue-400", text: "Enviado" },
    delivered: { class: "bg-primary/20 text-primary", text: "Entregado" },
    cancelled: { class: "bg-accent/20 text-accent", text: "Cancelado" },
    // Estados de devolución
    return_requested: { class: "bg-amber-500/20 text-amber-400", text: "Dev. Solicitada" },
    return_approved: { class: "bg-amber-500/20 text-amber-400", text: "Dev. Aprobada" },
    return_shipped: { class: "bg-purple-500/20 text-purple-400", text: "Dev. Enviada" },
    return_received: { class: "bg-cyan-500/20 text-cyan-400", text: "Dev. Recibida" },
    return_completed: { class: "bg-emerald-500/20 text-emerald-400", text: "Reembolsado" },
    partially_refunded: { class: "bg-amber-500/20 text-amber-400", text: "Reemb. Parcial" },
  };
  return badges[status] || { class: "bg-muted", text: status };
}
---

<PublicLayout title="Mis Pedidos - FashionStore">
  <div class="container mx-auto px-4 py-8 md:py-12">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
      <div>
        <a href="/cuenta" class="inline-flex items-center gap-1 text-sm text-muted-foreground hover:text-primary transition-colors mb-2">
          <ArrowLeft className="w-4 h-4" />
          Volver a mi cuenta
        </a>
        <h1 class="font-display text-3xl md:text-4xl">MIS PEDIDOS</h1>
        <p class="text-muted-foreground mt-1">
          {orders?.length || 0} pedidos en total
        </p>
      </div>
      
      <!-- Status Filter -->
      <div class="flex items-center gap-3">
        <Filter className="w-4 h-4 text-muted-foreground" />
        <select 
          class="admin-select text-sm py-2"
          onchange="window.location.href = this.value ? `/cuenta/pedidos?status=${this.value}` : '/cuenta/pedidos'"
        >
          <option value="" selected={!statusFilter}>Todos los estados</option>
          <optgroup label="Pedidos">
            <option value="paid" selected={statusFilter === "paid"}>Pagados</option>
            <option value="shipped" selected={statusFilter === "shipped"}>Enviados</option>
            <option value="delivered" selected={statusFilter === "delivered"}>Entregados</option>
            <option value="cancelled" selected={statusFilter === "cancelled"}>Cancelados</option>
          </optgroup>
          <optgroup label="Devoluciones">
            <option value="return_requested" selected={statusFilter === "return_requested"}>Dev. Solicitada</option>
            <option value="return_approved" selected={statusFilter === "return_approved"}>Dev. Aprobada</option>
            <option value="return_shipped" selected={statusFilter === "return_shipped"}>Dev. Enviada</option>
            <option value="return_received" selected={statusFilter === "return_received"}>Dev. Recibida</option>
            <option value="return_completed" selected={statusFilter === "return_completed"}>Reembolsado</option>
            <option value="partially_refunded" selected={statusFilter === "partially_refunded"}>Reemb. Parcial</option>
          </optgroup>
        </select>
      </div>
    </div>

    {orders && orders.length > 0 ? (
      <div class="space-y-4">
        {orders.map((order) => {
          const badge = getStatusBadge(order.status);
          const finalTotal = Number(order.total_amount);
          const hasCoupon = !!order.coupon_code;
          // Get first 3 product images
          const productImages = order.order_items
            ?.slice(0, 3)
            .map((item: any) => item.product?.images?.[0]?.image_url)
            .filter(Boolean) || [];

          return (
            <a
              href={`/cuenta/pedidos/${order.id}`}
              class="admin-card block hover:border-primary/30 transition-all cursor-pointer group"
            >
              <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                <div class="flex items-start gap-4">
                  {/* Product Thumbnails */}
                  <div class="flex -space-x-2 flex-shrink-0">
                    {productImages.length > 0 ? (
                      productImages.map((img: string, i: number) => (
                        <img 
                          src={img} 
                          alt="" 
                          class="w-12 h-12 rounded-lg object-cover border-2 border-card"
                          style={`z-index: ${3 - i}`}
                        />
                      ))
                    ) : (
                      <div class="w-12 h-12 rounded-lg bg-muted flex items-center justify-center">
                        <Package className="w-5 h-5 text-muted-foreground" />
                      </div>
                    )}
                    {order.order_items && order.order_items.length > 3 && (
                      <div class="w-12 h-12 rounded-lg bg-muted flex items-center justify-center border-2 border-card text-xs font-medium">
                        +{order.order_items.length - 3}
                      </div>
                    )}
                  </div>
                  
                  <div>
                    <div class="flex items-center gap-2 flex-wrap">
                      <p class="font-mono font-medium group-hover:text-primary transition-colors">
                        {order.order_number
                          ? formatOrderId(order.order_number)
                          : `#${order.id?.slice(0, 8).toUpperCase()}`}
                      </p>
                      <span class={`badge ${badge.class}`}>
                        {badge.text}
                      </span>
                      {hasCoupon && (
                        <span class="badge badge-success">
                          Cupón
                        </span>
                      )}
                    </div>
                    <p class="text-sm text-muted-foreground mt-1">
                      {formatDate(order.created_at)} · {order.order_items?.length || 0} productos
                    </p>
                    <p class="text-sm text-muted-foreground mt-0.5">
                      {order.shipping_city}, {order.shipping_postal_code}
                    </p>
                  </div>
                </div>
                
                <div class="flex items-center gap-4 md:gap-6">
                  <div class="text-right">
                    <p class="font-bold text-lg">{formatPrice(finalTotal)}</p>
                    {order.status === "shipped" && (
                      <p class="text-xs text-blue-500">En camino</p>
                    )}
                  </div>
                  <ChevronRight className="w-5 h-5 text-muted-foreground group-hover:text-primary group-hover:translate-x-1 transition-all" />
                </div>
              </div>
            </a>
          );
        })}
      </div>
    ) : (
      <div class="admin-card text-center py-16">
        <div class="w-20 h-20 mx-auto mb-6 bg-muted rounded-full flex items-center justify-center">
          <ShoppingBag className="w-10 h-10 text-muted-foreground" />
        </div>
        <h2 class="font-heading text-xl mb-2">
          {statusFilter ? "No hay pedidos con este estado" : "No tienes pedidos todavía"}
        </h2>
        <p class="text-muted-foreground mb-6 max-w-sm mx-auto">
          {statusFilter 
            ? "Prueba a cambiar el filtro o ver todos los pedidos."
            : "Cuando realices tu primera compra, aparecerá aquí."
          }
        </p>
        {statusFilter ? (
          <a href="/cuenta/pedidos" class="admin-btn-secondary inline-flex">
            Ver todos los pedidos
          </a>
        ) : (
          <a href="/productos" class="admin-btn-primary inline-flex">
            Explorar productos
          </a>
        )}
      </div>
    )}
  </div>
</PublicLayout>
