---
import PublicLayout from "@/layouts/PublicLayout.astro";
import { supabase } from "@/lib/supabase";
import { formatOrderId } from "@/lib/order-utils";
import { formatPrice } from "@/lib/formatters";
import { User, Package, LogOut, ChevronRight, ShoppingBag } from "lucide-react";

const user = Astro.locals.user;

// This page is protected by middleware, so user should always exist
if (!user) {
  return Astro.redirect("/cuenta/login");
}

const displayName =
  user.user_metadata?.full_name || user.email?.split("@")[0] || "Usuario";

// Fetch orders count and recent orders
const [{ count: totalOrders }, { data: recentOrders }] = await Promise.all([
  supabase
    .from("orders")
    .select("*", { count: "exact", head: true })
    .eq("customer_email", user.email),
  supabase
    .from("orders")
    .select("*, order_number")
    .eq("customer_email", user.email)
    .order("created_at", { ascending: false })
    .limit(5)
]);

const formatDate = (date: string) => {
  return new Intl.DateTimeFormat("es-ES", {
    day: "numeric",
    month: "long",
    year: "numeric",
  }).format(new Date(date));
};

const memberSince = new Date(user.created_at).toLocaleDateString("es-ES", {
  year: "numeric",
  month: "long",
});

// Navigation items
const navItems = [
  { icon: User, label: 'Mi Perfil', href: '/cuenta/perfil', description: 'Edita tus datos personales' },
  { icon: Package, label: 'Mis Pedidos', href: '/cuenta/pedidos', description: 'Historial de compras' },
  { icon: ShoppingBag, label: 'Explorar Tienda', href: '/productos', description: 'Ver productos' },
];

// Status badge mappings
interface StatusBadge {
  badgeClass: string;
  label: string;
}

const statusBadges: Record<string, StatusBadge> = {
  pending: { badgeClass: 'bg-yellow-500/20 text-yellow-400', label: 'Pendiente' },
  paid: { badgeClass: 'bg-emerald-500/20 text-emerald-400', label: 'Pagado' },
  shipped: { badgeClass: 'bg-blue-500/20 text-blue-400', label: 'Enviado' },
  delivered: { badgeClass: 'bg-primary/20 text-primary', label: 'Entregado' },
  cancelled: { badgeClass: 'bg-red-500/20 text-red-400', label: 'Cancelado' },
  return_requested: { badgeClass: 'bg-amber-500/20 text-amber-400', label: 'Dev. Solicitada' },
  return_approved: { badgeClass: 'bg-amber-500/20 text-amber-400', label: 'Dev. Aprobada' },
  return_shipped: { badgeClass: 'bg-purple-500/20 text-purple-400', label: 'Dev. Enviada' },
  return_received: { badgeClass: 'bg-cyan-500/20 text-cyan-400', label: 'Dev. Recibida' },
  return_completed: { badgeClass: 'bg-emerald-500/20 text-emerald-400', label: 'Reembolsado' },
  partially_refunded: { badgeClass: 'bg-amber-500/20 text-amber-400', label: 'Reemb. Parcial' },
};
---

<PublicLayout title="Mi Cuenta - FashionStore">
  <div class="container mx-auto px-4 py-8 md:py-12">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      
      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <div class="admin-card sticky top-24">
          <!-- User Profile Header -->
          <div class="text-center pb-6 border-b border-border">
            <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-primary/10 flex items-center justify-center">
              <User className="w-10 h-10 text-primary" />
            </div>
            <h2 class="font-heading text-xl">{displayName}</h2>
            <p class="text-sm text-muted-foreground mt-1">{user.email}</p>
            
            <!-- Stats -->
            <div class="flex justify-center gap-6 mt-4 pt-4 border-t border-border">
              <div class="text-center">
                <p class="text-2xl font-bold text-primary">{totalOrders || 0}</p>
                <p class="text-xs text-muted-foreground">Pedidos</p>
              </div>
              <div class="text-center">
                <p class="text-sm font-medium">{memberSince}</p>
                <p class="text-xs text-muted-foreground">Miembro desde</p>
              </div>
            </div>
          </div>

          <!-- Navigation -->
          <nav class="py-4 space-y-1">
            {navItems.map((item) => {
              const IconComponent = item.icon;
              const isActive = Astro.url.pathname === item.href;
              return (
                <a
                  href={item.href}
                  class={`flex items-center gap-3 px-4 py-3 rounded-lg transition-all group ${
                    isActive 
                      ? 'bg-primary/10 text-primary' 
                      : 'hover:bg-muted text-foreground'
                  }`}
                >
                  <IconComponent className={`w-5 h-5 ${isActive ? 'text-primary' : 'text-muted-foreground group-hover:text-primary'}`} />
                  <div class="flex-1">
                    <span class="font-medium">{item.label}</span>
                  </div>
                  <ChevronRight className="w-4 h-4 text-muted-foreground opacity-0 group-hover:opacity-100 transition-opacity" />
                </a>
              );
            })}
          </nav>

          <!-- Logout -->
          <div class="pt-4 border-t border-border">
            <form action="/api/auth/logout" method="POST">
              <button
                type="submit"
                class="w-full flex items-center gap-3 px-4 py-3 rounded-lg text-muted-foreground hover:text-accent hover:bg-accent/10 transition-all group"
              >
                <LogOut className="w-5 h-5" />
                <span>Cerrar sesión</span>
              </button>
            </form>
          </div>
        </div>
      </div>

      <!-- Main Content -->
      <div class="lg:col-span-3 space-y-6">
        <!-- Welcome Header -->
        <div class="admin-card bg-gradient-to-r from-primary/10 via-primary/5 to-transparent">
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 rounded-xl bg-primary/20 flex items-center justify-center">
              <User className="w-7 h-7 text-primary" />
            </div>
            <div>
              <h1 class="font-display text-2xl md:text-3xl">¡Hola, {displayName}!</h1>
              <p class="text-muted-foreground">Bienvenido a tu cuenta de FashionStore</p>
            </div>
          </div>
        </div>

        <!-- Account Info Card -->
        <div class="admin-card">
          <div class="flex items-center justify-between mb-6">
            <h2 class="font-heading text-xl flex items-center gap-2">
              <User className="w-5 h-5 text-primary" />
              Información de la Cuenta
            </h2>
            <a href="/cuenta/perfil" class="text-sm text-primary hover:underline flex items-center gap-1">
              Editar <ChevronRight className="w-4 h-4" />
            </a>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="p-4 bg-muted/30 rounded-lg">
              <p class="text-xs text-muted-foreground uppercase tracking-wider mb-1">Email</p>
              <p class="font-medium">{user.email}</p>
            </div>
            {user.user_metadata?.full_name && (
              <div class="p-4 bg-muted/30 rounded-lg">
                <p class="text-xs text-muted-foreground uppercase tracking-wider mb-1">Nombre</p>
                <p class="font-medium">{user.user_metadata.full_name}</p>
              </div>
            )}
            <div class="p-4 bg-muted/30 rounded-lg">
              <p class="text-xs text-muted-foreground uppercase tracking-wider mb-1">Miembro desde</p>
              <p class="font-medium">{formatDate(user.created_at)}</p>
            </div>
            <div class="p-4 bg-muted/30 rounded-lg">
              <p class="text-xs text-muted-foreground uppercase tracking-wider mb-1">Total de pedidos</p>
              <p class="font-medium">{totalOrders || 0} pedidos realizados</p>
            </div>
          </div>
        </div>

        <!-- Recent Orders Card -->
        <div class="admin-card">
          <div class="flex items-center justify-between mb-6">
            <h2 class="font-heading text-xl flex items-center gap-2">
              <Package className="w-5 h-5 text-primary" />
              Últimos Pedidos
            </h2>
            <a href="/cuenta/pedidos" class="text-sm text-primary hover:underline flex items-center gap-1">
              Ver todos <ChevronRight className="w-4 h-4" />
            </a>
          </div>

          {recentOrders && recentOrders.length > 0 ? (
            <div class="space-y-3">
              {recentOrders.map((order) => (
                <a
                  href={`/cuenta/pedidos/${order.id}`}
                  class="flex items-center justify-between p-4 bg-muted/30 rounded-lg border border-transparent hover:border-primary/30 hover:bg-muted/50 transition-all group"
                >
                  <div class="flex items-center gap-4">
                    <div class="w-10 h-10 rounded-lg bg-card flex items-center justify-center border border-border">
                      <Package className="w-5 h-5 text-muted-foreground" />
                    </div>
                    <div>
                      <p class="font-mono text-sm font-medium group-hover:text-primary transition-colors">
                        {order.order_number ? formatOrderId(order.order_number) : `#${order.id.slice(0, 8)}`}
                      </p>
                      <p class="text-xs text-muted-foreground">
                        {formatDate(order.created_at)}
                      </p>
                    </div>
                  </div>
                  <div class="flex items-center gap-4">
                    {Object.keys(statusBadges).includes(order.status) ? (
                      <span class={`badge ${statusBadges[order.status as keyof typeof statusBadges].badgeClass}`}>
                        {statusBadges[order.status as keyof typeof statusBadges].label}
                      </span>
                    ) : (
                      <span class="badge bg-muted">
                        {order.status}
                      </span>
                    )}
                    <span class="font-bold">
                      {formatPrice(order.total_amount)}
                    </span>
                    <ChevronRight className="w-4 h-4 text-muted-foreground group-hover:text-primary transition-colors" />
                  </div>
                </a>
              ))}
            </div>
          ) : (
            <div class="text-center py-12">
              <div class="w-16 h-16 mx-auto mb-4 bg-muted rounded-full flex items-center justify-center">
                <ShoppingBag className="w-8 h-8 text-muted-foreground" />
              </div>
              <h3 class="font-heading text-lg mb-2">No tienes pedidos todavía</h3>
              <p class="text-muted-foreground mb-6">
                Cuando realices tu primera compra, aparecerá aquí.
              </p>
              <a href="/productos" class="admin-btn-primary inline-flex">
                Explorar productos
              </a>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</PublicLayout>
