---
import AdminLayout from "@/layouts/AdminLayout.astro";
import { supabase } from "@/lib/supabase";

// Fetch settings
const { data: settings } = await supabase.from("settings").select("*");

const getSettingValue = (key: string, defaultValue: string = "") => {
  const setting = settings?.find((s: any) => s.key === key);
  // Priority: value_number (for numeric fields) -> value (text) -> value_bool -> default
  if (setting?.value_number !== null && setting?.value_number !== undefined) {
    return setting.value_number;
  }
  if (setting?.value !== null && setting?.value !== undefined) {
    return setting.value;
  }
  if (setting?.value_bool !== null && setting?.value_bool !== undefined) {
    return setting.value_bool;
  }
  return defaultValue;
};

const getSettingBool = (key: string) => {
  const setting = settings?.find((s: any) => s.key === key);
  if (setting?.value_bool !== null && setting?.value_bool !== undefined) {
    return setting.value_bool;
  }
  // Fallback: check if value is 'true' string
  return setting?.value === "true";
};

// Tooltips para cada campo
const tooltips: Record<string, string> = {
  offers_enabled: "Muestra u oculta la sección de ofertas flash en la página principal. Útil para campañas temporales.",
  flash_offers_end: "Cuando llegue esta fecha, la sección de ofertas se ocultará automáticamente. Déjalo vacío para ofertas permanentes.",
  store_name: "El nombre que aparecerá en emails, facturas y la barra del navegador.",
  store_email: "Email principal para comunicaciones con clientes. Asegúrate de que es válido.",
  store_phone: "Teléfono de atención al cliente. Se muestra en el footer y página de contacto.",
  store_address: "Dirección física del negocio. Aparece en facturas y página de contacto.",
  free_shipping_threshold: "Pedidos con este importe o superior tendrán envío gratis. Pon 0 para desactivar.",
  shipping_cost: "Coste del envío estándar cuando no se alcanza el umbral de envío gratis.",
  social_instagram: "URL completa de tu perfil de Instagram (ej: https://instagram.com/tutienda).",
  social_twitter: "URL completa de tu perfil de Twitter/X.",
  social_tiktok: "URL completa de tu perfil de TikTok.",
  social_youtube: "URL completa de tu canal de YouTube.",
  tax_rate: "Porcentaje de IVA aplicable. Este valor se usa para calcular impuestos en facturas.",
  prices_include_tax: "Si está activado, los precios mostrados ya incluyen IVA. Si no, el IVA se añade al total.",
  return_window_days: "Número de días que tienen los clientes para solicitar una devolución desde la entrega.",
  maintenance_mode: "⚠️ CUIDADO: Activar esto bloqueará el acceso a toda la tienda para visitantes.",
  maintenance_message: "Mensaje personalizado que verán los visitantes durante el mantenimiento.",
};
