  <script>
    // ============================================
    // ELEMENTOS DEL DOM
    // ============================================
    const form = document.getElementById("settings-form") as HTMLFormElement;
    const saveBtn = document.getElementById("save-btn") as HTMLButtonElement;
    const messageDiv = document.getElementById("form-message") as HTMLDivElement;
    const unsavedBanner = document.getElementById("unsaved-banner") as HTMLDivElement;
    const toastContainer = document.getElementById("toast-container") as HTMLDivElement;
    const confirmModal = document.getElementById("confirm-modal") as HTMLDivElement;
    const modalBackdrop = document.getElementById("modal-backdrop") as HTMLDivElement;
    const modalTitle = document.getElementById("modal-title") as HTMLHeadingElement;
    const modalMessage = document.getElementById("modal-message") as HTMLParagraphElement;
    const modalConfirm = document.getElementById("modal-confirm") as HTMLButtonElement;
    const modalCancel = document.getElementById("modal-cancel") as HTMLButtonElement;
    
    // ============================================
    // ESTADO
    // ============================================
    let hasUnsavedChanges = false;
    let initialFormData: string = '';
    let pendingMaintenanceToggle: HTMLInputElement | null = null;
    
    // Guardar estado inicial del formulario
    function captureInitialState() {
      initialFormData = new FormData(form).toString();
    }
    
    // ============================================
    // TOAST NOTIFICATIONS
    // ============================================
    function showToast(message: string, type: 'success' | 'error' | 'warning' = 'success') {
      const toast = document.createElement('div');
      const colors = {
        success: 'bg-primary/90 text-primary-foreground',
        error: 'bg-red-500/90 text-white',
        warning: 'bg-yellow-500/90 text-yellow-950'
      };
      const icons = {
        success: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />',
        error: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />',
        warning: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />'
      };
      
      toast.className = `${colors[type]} px-4 py-3 rounded-lg shadow-lg flex items-center gap-3 animate-in slide-in-from-right duration-300`;
      toast.innerHTML = `
        <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">${icons[type]}</svg>
        <span class="font-medium">${message}</span>
        <button class="ml-2 opacity-70 hover:opacity-100 transition-opacity">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      `;
      
      const closeBtn = toast.querySelector('button');
      closeBtn?.addEventListener('click', () => removeToast(toast));
      
      toastContainer.appendChild(toast);
      
      // Auto-remove after 4 seconds
      setTimeout(() => removeToast(toast), 4000);
    }
    
    function removeToast(toast: HTMLElement) {
      toast.classList.add('animate-out', 'slide-out-to-right', 'duration-200');
      setTimeout(() => toast.remove(), 200);
    }
    
    // ============================================
    // TOOLTIPS
    // ============================================
    const tooltipTriggers = document.querySelectorAll('.tooltip-trigger');
    let activeTooltip: HTMLElement | null = null;
    
    tooltipTriggers.forEach(trigger => {
      trigger.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        
        // Remove existing tooltip
        if (activeTooltip) {
          activeTooltip.remove();
          activeTooltip = null;
        }
        
        const tooltipText = (trigger as HTMLElement).dataset.tooltip;
        if (!tooltipText) return;
        
        const tooltip = document.createElement('div');
        tooltip.className = 'fixed z-50 max-w-xs p-3 text-sm bg-card border border-border rounded-lg shadow-xl animate-in fade-in zoom-in-95 duration-150';
        tooltip.textContent = tooltipText;
        
        document.body.appendChild(tooltip);
        activeTooltip = tooltip;
        
        // Position tooltip
        const rect = (trigger as HTMLElement).getBoundingClientRect();
        const tooltipRect = tooltip.getBoundingClientRect();
        
        let top = rect.bottom + 8;
        let left = rect.left - (tooltipRect.width / 2) + (rect.width / 2);
        
        // Keep within viewport
        if (left < 8) left = 8;
        if (left + tooltipRect.width > window.innerWidth - 8) {
          left = window.innerWidth - tooltipRect.width - 8;
        }
        if (top + tooltipRect.height > window.innerHeight - 8) {
          top = rect.top - tooltipRect.height - 8;
        }
        
        tooltip.style.top = `${top}px`;
        tooltip.style.left = `${left}px`;
      });
    });
    
    // Close tooltip when clicking elsewhere
    document.addEventListener('click', (e) => {
      if (activeTooltip && !(e.target as HTMLElement).closest('.tooltip-trigger')) {
        activeTooltip.remove();
        activeTooltip = null;
      }
    });
    
    // ============================================
    // UNSAVED CHANGES DETECTION
    // ============================================
    function checkForChanges() {
      const currentData = new FormData(form).toString();
      hasUnsavedChanges = currentData !== initialFormData;
      
      if (hasUnsavedChanges) {
        unsavedBanner.classList.remove('hidden');
      } else {
        unsavedBanner.classList.add('hidden');
      }
    }
    
    // Listen to all form inputs
    const allInputs = form.querySelectorAll('.setting-input');
    allInputs.forEach(input => {
      input.addEventListener('change', checkForChanges);
      input.addEventListener('input', checkForChanges);
    });
    
    // Warn before leaving with unsaved changes
    window.addEventListener('beforeunload', (e) => {
      if (hasUnsavedChanges) {
        e.preventDefault();
        e.returnValue = '';
      }
    });
    
    // ============================================
    // CONFIRMATION MODAL FOR CRITICAL CHANGES
    // ============================================
    const maintenanceToggle = document.getElementById('maintenance_mode') as HTMLInputElement;
    
    maintenanceToggle?.addEventListener('change', (e) => {
      if (maintenanceToggle.checked) {
        e.preventDefault();
        maintenanceToggle.checked = false;
        pendingMaintenanceToggle = maintenanceToggle;
        
        modalTitle.textContent = '¿Activar modo mantenimiento?';
        modalMessage.textContent = 'Los visitantes no podrán acceder a la tienda hasta que lo desactives. Solo los administradores podrán navegar.';
        confirmModal.classList.remove('hidden');
      }
    });
    
    modalConfirm?.addEventListener('click', () => {
      if (pendingMaintenanceToggle) {
        pendingMaintenanceToggle.checked = true;
        checkForChanges();
      }
      confirmModal.classList.add('hidden');
      pendingMaintenanceToggle = null;
    });
    
    modalCancel?.addEventListener('click', () => {
      confirmModal.classList.add('hidden');
      pendingMaintenanceToggle = null;
    });
    
    modalBackdrop?.addEventListener('click', () => {
      confirmModal.classList.add('hidden');
      pendingMaintenanceToggle = null;
    });
    
    // ============================================
    // KEYBOARD SHORTCUTS
    // ============================================
    document.addEventListener('keydown', (e) => {
      // Ctrl+S or Cmd+S to save
      if ((e.ctrlKey || e.metaKey) && e.key === 's') {
        e.preventDefault();
        if (hasUnsavedChanges && !saveBtn.disabled) {
          form.requestSubmit();
        }
      }
      
      // Escape to close modal
      if (e.key === 'Escape' && !confirmModal.classList.contains('hidden')) {
        confirmModal.classList.add('hidden');
        pendingMaintenanceToggle = null;
      }
    });
    
    // ============================================
    // FORM SUBMISSION
    // ============================================
    form?.addEventListener("submit", async (e) => {
      e.preventDefault();

      saveBtn.disabled = true;
      saveBtn.innerHTML = `
        <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Guardando...
      `;

      try {
        const formData = new FormData(form);

        // Collect all settings
        const settings = [
          // Boolean settings
          {
            key: "offers_enabled",
            value_bool: (document.getElementById("offers_enabled") as HTMLInputElement).checked,
          },
          {
            key: "prices_include_tax",
            value_bool: (document.getElementById("prices_include_tax") as HTMLInputElement).checked,
          },
          {
            key: "maintenance_mode",
            value_bool: (document.getElementById("maintenance_mode") as HTMLInputElement).checked,
          },
          // Text settings
          { key: "store_name", value: formData.get("store_name") as string },
          { key: "store_email", value: formData.get("store_email") as string },
          { key: "store_phone", value: formData.get("store_phone") as string },
          { key: "store_address", value: formData.get("store_address") as string },
          { key: "maintenance_message", value: formData.get("maintenance_message") as string },
          // Numeric settings
          {
            key: "free_shipping_threshold",
            value_number: parseFloat(formData.get("free_shipping_threshold") as string) || 50,
          },
          {
            key: "shipping_cost",
            value_number: parseFloat(formData.get("shipping_cost") as string) || 4.99,
          },
          {
            key: "tax_rate",
            value_number: parseFloat(formData.get("tax_rate") as string) || 21,
          },
          {
            key: "return_window_days",
            value_number: parseInt(formData.get("return_window_days") as string) || 30,
          },
          // Social settings
          { key: "social_instagram", value: formData.get("social_instagram") as string },
          { key: "social_twitter", value: formData.get("social_twitter") as string },
          { key: "social_tiktok", value: formData.get("social_tiktok") as string },
          { key: "social_youtube", value: formData.get("social_youtube") as string },
          // Flash offers end date
          { key: "flash_offers_end", value: formData.get("flash_offers_end") as string },
        ];

        const response = await fetch("/api/admin/configuracion", {
          method: "PUT",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ settings }),
        });

        const result = await response.json();

        if (!response.ok) {
          throw new Error(result.error || "Error al guardar");
        }

        // Success!
        showToast('Configuración guardada correctamente', 'success');
        hasUnsavedChanges = false;
        unsavedBanner.classList.add('hidden');
        captureInitialState();
        
      } catch (error: any) {
        showToast(error.message || 'Error al guardar', 'error');
      } finally {
        saveBtn.disabled = false;
        saveBtn.innerHTML = `
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          Guardar Cambios
        `;
      }
    });
    
    // ============================================
    // INITIALIZATION
    // ============================================
    captureInitialState();
  </script>
  
