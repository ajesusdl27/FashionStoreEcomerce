---
import AdminLayout from "@/layouts/AdminLayout.astro";
import ToggleSwitch from "@/components/ui/ToggleSwitch.astro";
import { supabase } from "@/lib/supabase";

// Fetch settings
const { data: settings } = await supabase.from("settings").select("*");

const getSettingValue = (key: string, defaultValue: string = "") => {
  const setting = settings?.find((s: any) => s.key === key);
  // Priority: value_number (for numeric fields) -> value (text) -> value_bool -> default
  if (setting?.value_number !== null && setting?.value_number !== undefined) {
    return setting.value_number;
  }
  if (setting?.value !== null && setting?.value !== undefined) {
    return setting.value;
  }
  if (setting?.value_bool !== null && setting?.value_bool !== undefined) {
    return setting.value_bool;
  }
  return defaultValue;
};

const getSettingBool = (key: string) => {
  const setting = settings?.find((s: any) => s.key === key);
  if (setting?.value_bool !== null && setting?.value_bool !== undefined) {
    return setting.value_bool;
  }
  // Fallback: check if value is 'true' string
  return setting?.value === "true";
};
