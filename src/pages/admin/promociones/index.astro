                        {promo.description && (
                          <div class="text-xs text-muted-foreground line-clamp-1 max-w-[200px]">
                            {promo.description}
                          </div>
                        )}
                        {/* CTA indicator */}
                        {promo.cta_text && (
                          <div class="mt-1">
                            <span class="text-[10px] bg-primary/10 text-primary px-1.5 py-0.5 rounded">
                              CTA: {promo.cta_text}
