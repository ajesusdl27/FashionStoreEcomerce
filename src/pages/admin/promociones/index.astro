                  <ul class="text-sm text-muted-foreground space-y-1">
                    {expiringSoon.map((p: any) => {
                      const hours = Math.round(hoursUntilExpiry(p));
                      return (
                        <li class="flex items-center justify-between">
                          <span>"{p.title}"</span>
                          <span class="text-yellow-400 font-medium ml-2">
                            {hours < 24
                              ? `${hours}h restantes`
                              : `${Math.round(hours / 24)} d√≠as`}
                          </span>
                        </li>
                      );
                    })}
                  </ul>
                </div>
              </div>
            </div>
          )}

          {alreadyExpired.length > 0 && (
            <div class="bg-red-500/10 border border-red-500/30 rounded-lg p-4">
              <div class="flex items-start gap-3">
                <AlertTriangle className="w-5 h-5 text-red-400 flex-shrink-0 mt-0.5" />
                <div>
                  <h4 class="font-medium text-red-400 mb-1">
                    Promociones expiradas a√∫n activas
