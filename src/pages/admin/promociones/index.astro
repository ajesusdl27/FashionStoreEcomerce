---
import AdminLayout from "@/layouts/AdminLayout.astro";
import { createAuthenticatedClient } from "@/lib/supabase";
import {
  Home,
  Megaphone,
  ShoppingCart,
  Package,
  MapPin,
  Calendar,
  History,
  Plus,
  AlertTriangle,
  Eye,
  Smartphone,
  Pencil,
  Copy,
  Trash2,
  Inbox,
} from "lucide-react";

// Get authenticated client for RLS compliance
const accessToken = Astro.cookies.get("sb-access-token")?.value;
const refreshToken = Astro.cookies.get("sb-refresh-token")?.value;
const authClient = createAuthenticatedClient(accessToken, refreshToken);

// Fetch promotions
const { data: promotions } = await authClient
  .from("promotions")
  .select("*, coupons(code)")
  .order("priority", { ascending: true })
  .order("created_at", { ascending: false });

// Current date for status calculations
const now = new Date();

// Zone icons mapping removed in favor of direct component usage
// const zoneIcons: Record<string, string> = {
//   home_hero: "üè†",
//   announcement_top: "üì¢",
//   cart_sidebar: "üõí",
//   product_page: "üì¶",
// };

const formatDate = (date: string | null) => {
  if (!date) return "-";
  return new Date(date).toLocaleDateString("es-ES", {
    day: "2-digit",
    month: "short",
    year: "numeric",
  });
};

const formatZone = (locations: string[]) => {
  if (!locations || locations.length === 0) return "Sin ubicaci√≥n";
  const zones: Record<string, string> = {
    home_hero: "Home Hero",
    announcement_top: "Barra Superior",
    cart_sidebar: "Carrito",
    product_page: "Ficha Producto",
  };
  return locations.map((loc) => zones[loc] || loc).join(", ");
};

// Helper to calculate promotion status
const getPromoStatus = (promo: any) => {
  const startDate = promo.start_date ? new Date(promo.start_date) : null;
  const endDate = promo.end_date ? new Date(promo.end_date) : null;

  if (!promo.is_active) {
    return {
      status: "inactive",
      label: "Inactivo",
      color: "bg-muted",
      textColor: "text-muted-foreground",
    };
  }
  if (endDate && endDate < now) {
    return {
      status: "expired",
      label: "Expirada",
      color: "bg-red-500",
      textColor: "text-red-400",
    };
  }
  if (startDate && startDate > now) {
    return {
      status: "scheduled",
      label: "Programada",
      color: "bg-yellow-500",
      textColor: "text-yellow-400",
    };
  }
  return {
    status: "active",
    label: "Activo",
    color: "bg-green-500",
    textColor: "text-green-400",
  };
};

// Calculate alerts for promotions expiring soon (within 48 hours)
const hoursUntilExpiry = (promo: any) => {
  if (!promo.end_date) return Infinity;
  const endDate = new Date(promo.end_date);
  return (endDate.getTime() - now.getTime()) / (1000 * 60 * 60);
};

const expiringSoon =
  promotions?.filter((p: any) => {
    const hours = hoursUntilExpiry(p);
    return hours > 0 && hours <= 48 && p.is_active;
  }) || [];

const alreadyExpired =
  promotions?.filter((p: any) => {
    return getPromoStatus(p).status === "expired" && p.is_active;
  }) || [];
---

