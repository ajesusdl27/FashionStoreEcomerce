    </div>

    <!-- Promotions Table -->
    <div class="admin-card">
      {
        promotions && promotions.length > 0 ? (
          <div class="overflow-x-auto -mx-6">
            <table class="admin-table">
              <thead>
                <tr>
                  <th class="w-28">Vista previa</th>
                  <th>Promoci√≥n</th>
                  <th>Ubicaci√≥n</th>
                  <th>Cup√≥n</th>
                  <th class="text-center">Prioridad</th>
                  <th>Periodo</th>
                  <th>Estado</th>
                  <th class="text-right">Acciones</th>
                </tr>
              </thead>
              <tbody>
                {promotions.map((promo: any) => {
                  const promoStatus = getPromoStatus(promo);
                  const endDate = promo.end_date
                    ? new Date(promo.end_date)
                    : null;
                  const isExpired = endDate && endDate < now;

                  return (
                    <tr class="group">
                      <td>
                        <div class="w-24 h-14 rounded-lg overflow-hidden bg-muted relative group/img cursor-pointer">
                          <img
                            src={promo.image_url}
                            alt={promo.title}
                            class="w-full h-full object-cover transition-transform duration-300 group-hover/img:scale-110"
                          />
                          {/* Hover overlay for full preview */}
                          <div class="absolute inset-0 bg-black/60 opacity-0 group-hover/img:opacity-100 transition-opacity flex items-center justify-center">
                            <Eye className="w-5 h-5 text-white" />
                          </div>
                          {/* Mobile indicator */}
                          {promo.mobile_image_url && (
                            <div
