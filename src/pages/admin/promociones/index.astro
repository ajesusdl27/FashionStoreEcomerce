                  </p>
                  <ul class="text-sm text-muted-foreground space-y-1">
                    {alreadyExpired.map((p: any) => (
                      <li class="flex items-center gap-2">
                        <span>"{p.title}"</span>
                        <a
                          href={`/admin/promociones/editar/${p.id}`}
                          class="text-primary hover:underline text-xs"
                        >
                          Editar
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          )}
        </div>
      )
    }

    <!-- Filters Bar -->
    <div
      class="flex flex-wrap items-center gap-3 bg-card border border-border rounded-lg p-4"
    >
      <span class="text-sm text-muted-foreground font-medium">Filtrar por:</span
      >

      <select
        id="filter-status"
        class="admin-input text-sm py-1.5 px-3 pr-8 min-w-[120px]"
      >
        <option value="">Estado</option>
        <option value="active">Activo</option>
        <option value="scheduled">Programada</option>
        <option value="expired">Expirada</option>
        <option value="inactive">Inactivo</option>
      </select>

      <select
        id="filter-zone"
        class="admin-input text-sm py-1.5 px-3 pr-8 min-w-[140px]"
      >
        <option value="">Ubicaci√≥n</option>
        <option value="home_hero">Home Hero</option>
        <option value="announcement_top">Barra Superior</option>
        <option value="cart_sidebar">Carrito</option>
        <option value="product_page">Ficha Producto</option>
      </select>

      <select
        id="filter-coupon"
        class="admin-input text-sm py-1.5 px-3 pr-8 min-w-[120px]"
      >
        <option value="">Cup√≥n</option>
        <option value="with">Con cup√≥n</option>
        <option value="without">Sin cup√≥n</option>
      </select>

      <button
