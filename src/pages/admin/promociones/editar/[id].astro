    const locations: string[] = [];

    // Process FormData
    formData.forEach((value, key) => {
      if (key === "locations") {
        locations.push(value as string);
      } else if (key === "images") {
        // Desktop images
        try {
          const urls = JSON.parse(value as string);
          if (urls && urls.length > 0) {
            data["image_url"] = urls[0];
          }
        } catch (e) {
          console.error("Error parsing images", e);
        }
      } else if (key === "mobile_images") {
        // Mobile images
        try {
          const urls = JSON.parse(value as string);
          if (urls && urls.length > 0) {
            data["mobile_image_url"] = urls[0];
          }
        } catch (e) {
          console.error("Error parsing mobile images", e);
        }
      } else if (key.startsWith("style_")) {
        if (!data["style_config"]) data["style_config"] = {};
        const styleKey = key.replace("style_", "");
        data["style_config"][styleKey] = value;
      } else if (key === "is_active") {
        data[key] = true;
      } else if (value !== "") {
        data[key] = value;
      }
    });

    // Explicitly handle unchecked checkbox for is_active
    if (!data.hasOwnProperty("is_active")) {
      data["is_active"] = false;
    }

    data["locations"] = locations;

    // Handle custom cta_link
    if (data["cta_link"] === "custom") {
      const customLink = formData.get("cta_link_custom") as string;
      data["cta_link"] = customLink || "/productos";
    }
    // Remove the custom field from data
    delete data["cta_link_custom"];

    // Default manual validations
    if (!data["image_url"]) {
      // Allow update without changing image?
      // ImageUploader initialImages prop should handle this,
      // but if its empty meaning they deleted it, then error.
      // Current logic: ImageUploader writes to hidden input even if not changed (via initial state)
    }

    // Check hidden input again
    const imagesVal = formData.get("images");
    let hasImage = false;
    try {
      if (imagesVal) {
        const urls = JSON.parse(imagesVal as string);
        if (urls.length > 0) hasImage = true;
      }
    } catch (e) {}

    if (!hasImage) {
      formError.textContent = "Debes tener al menos una imagen.";
      formError.classList.remove("hidden");
      btnSubmit.disabled = false;
      btnText.classList.remove("hidden");
      btnSpinner.classList.add("hidden");
      return;
    }

    if (locations.length === 0) {
      formError.textContent = "Debes seleccionar al menos una ubicaci√≥n.";
      formError.classList.remove("hidden");
      btnSubmit.disabled = false;
      btnText.classList.remove("hidden");
      btnSpinner.classList.add("hidden");
      return;
    }

    try {
      const response = await fetch("/api/admin/promociones", {
        method: "PUT",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (!response.ok) {
        throw new Error(result.error || "Error al actualizar la promoci√≥n");
      }

      // Show success toast
      const successToast = document.getElementById("form-success");
      successToast?.classList.remove("hidden");

      // Redirect after short delay
      setTimeout(() => {
        window.location.href = "/admin/promociones";
      }, 1500);
    } catch (error: any) {
      formError.textContent = error.message;
      formError.classList.remove("hidden");
      btnSubmit.disabled = false;
      btnText.classList.remove("hidden");
      btnSpinner.classList.add("hidden");
    }
  });

  // ========== REAL-TIME FORM VALIDATION ==========

  // Validation helper functions
  function showFieldError(inputId: string, errorId: string, message: string) {
    const input = document.getElementById(inputId) as HTMLInputElement;
    const errorEl = document.getElementById(errorId) as HTMLElement;
    if (input && errorEl) {
      input.classList.add("border-red-500", "focus:ring-red-500");
      input.classList.remove("border-border", "focus:ring-primary");
      errorEl.textContent = message;
      errorEl.classList.remove("hidden");
    }
  }

  function clearFieldError(inputId: string, errorId: string) {
    const input = document.getElementById(inputId) as HTMLInputElement;
    const errorEl = document.getElementById(errorId) as HTMLElement;
    if (input && errorEl) {
      input.classList.remove("border-red-500", "focus:ring-red-500");
      input.classList.add("border-border", "focus:ring-primary");
      errorEl.textContent = "";
      errorEl.classList.add("hidden");
    }
  }

  // Title validation
  const titleInputEl = document.getElementById(
    "title-input"
  ) as HTMLInputElement;
  titleInputEl?.addEventListener("blur", () => {
    const value = titleInputEl.value.trim();
    if (value.length === 0) {
      showFieldError("title-input", "title-error", "El t√≠tulo es obligatorio");
    } else if (value.length < 3) {
      showFieldError(
        "title-input",
        "title-error",
        "El t√≠tulo debe tener al menos 3 caracteres"
      );
    } else if (value.length > 100) {
      showFieldError(
        "title-input",
        "title-error",
        "El t√≠tulo no puede superar los 100 caracteres"
      );
    } else {
      clearFieldError("title-input", "title-error");
    }
  });

  titleInputEl?.addEventListener("input", () => {
    const value = titleInputEl.value.trim();
    if (value.length >= 3) {
      clearFieldError("title-input", "title-error");
    }
  });

  // Location validation - at least one must be selected
  const locationCheckboxes = document.querySelectorAll(
    'input[name="locations"]'
  ) as NodeListOf<HTMLInputElement>;
  const locationContainer = locationCheckboxes[0]?.closest(".grid");

  function validateLocations() {
    const anyChecked = Array.from(locationCheckboxes).some((cb) => cb.checked);
    const errorEl = document.getElementById("locations-error");

    if (!anyChecked && errorEl) {
      errorEl.classList.remove("hidden");
      return false;
    } else if (errorEl) {
      errorEl.classList.add("hidden");
    }
    return true;
  }

  // Add location error message if not exists
  if (locationContainer && !document.getElementById("locations-error")) {
    const errorDiv = document.createElement("p");
    errorDiv.id = "locations-error";
    errorDiv.className = "hidden text-xs text-red-400 mt-2";
    errorDiv.textContent = "Debes seleccionar al menos una ubicaci√≥n";
    locationContainer.parentElement?.appendChild(errorDiv);
  }

  locationCheckboxes.forEach((cb) => {
    cb.addEventListener("change", validateLocations);
  });

  // Priority validation
  const priorityInput = document.querySelector(
    'input[name="priority"]'
  ) as HTMLInputElement;
  priorityInput?.addEventListener("blur", () => {
    const value = parseInt(priorityInput.value);
    if (isNaN(value) || value < 1) {
      priorityInput.classList.add("border-red-500");
      priorityInput.value = "1";
    } else {
      priorityInput.classList.remove("border-red-500");
    }
  });

  // Date validation - end date should be after start date
  const startDateInput = document.querySelector(
    'input[name="start_date"]'
  ) as HTMLInputElement;
  const endDateInput = document.querySelector(
    'input[name="end_date"]'
  ) as HTMLInputElement;

  function validateDates() {
    if (startDateInput?.value && endDateInput?.value) {
      const startDate = new Date(startDateInput.value);
      const endDate = new Date(endDateInput.value);

      if (endDate <= startDate) {
        endDateInput.classList.add("border-red-500");
        // Create or update error message
        let errorEl = document.getElementById("date-error");
        if (!errorEl) {
          errorEl = document.createElement("p");
          errorEl.id = "date-error";
          errorEl.className = "text-xs text-red-400 mt-1";
          endDateInput.parentElement?.appendChild(errorEl);
        }
        errorEl.textContent =
          "La fecha de fin debe ser posterior a la de inicio";
        return false;
      } else {
        endDateInput.classList.remove("border-red-500");
        document.getElementById("date-error")?.remove();
      }
    }
    return true;
  }

  endDateInput?.addEventListener("blur", validateDates);
  startDateInput?.addEventListener("change", validateDates);

  // ========== CTA LINK SELECTOR ==========
  const ctaLinkSelect = document.getElementById(
    "cta-link-select"
  ) as HTMLSelectElement;
  const ctaLinkCustom = document.getElementById(
    "cta-link-custom"
  ) as HTMLInputElement;

  ctaLinkSelect?.addEventListener("change", () => {
    if (ctaLinkSelect.value === "custom") {
      ctaLinkCustom?.classList.remove("hidden");
      ctaLinkCustom?.focus();
    } else {
      ctaLinkCustom?.classList.add("hidden");
      ctaLinkCustom.value = "";
    }
  });
</script>
