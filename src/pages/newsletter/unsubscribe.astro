---
import PublicLayout from "@/layouts/PublicLayout.astro";

const token = Astro.url.searchParams.get('token');
---

<PublicLayout title="Darse de baja - Newsletter">
  <div class="min-h-[60vh] flex items-center justify-center px-4">
    <div class="max-w-md w-full">
      <div id="loading-state" class="admin-card text-center p-8">
        <div class="animate-spin w-8 h-8 border-2 border-primary border-t-transparent rounded-full mx-auto mb-4"></div>
        <p class="text-muted-foreground">Procesando tu solicitud...</p>
      </div>

      <div id="success-state" class="hidden admin-card text-center p-8">
        <div class="w-16 h-16 bg-green-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-foreground mb-2">¡Listo!</h1>
        <p id="success-message" class="text-muted-foreground mb-4"></p>
        <p id="success-email" class="text-sm text-muted-foreground mb-6"></p>
        <a href="/" class="inline-block px-6 py-3 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors">
          Volver a la tienda
        </a>
      </div>

      <div id="error-state" class="hidden admin-card text-center p-8">
        <div class="w-16 h-16 bg-red-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-foreground mb-2">Error</h1>
        <p id="error-message" class="text-muted-foreground mb-6"></p>
        <a href="/" class="inline-block px-6 py-3 bg-secondary text-secondary-foreground rounded-lg font-medium hover:bg-secondary/80 transition-colors">
          Volver a la tienda
        </a>
      </div>

      <div id="no-token-state" class="hidden admin-card text-center p-8">
        <div class="w-16 h-16 bg-yellow-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-foreground mb-2">Enlace inválido</h1>
        <p class="text-muted-foreground mb-6">
          Este enlace de baja no es válido. Por favor, usa el enlace que recibiste en tu correo electrónico.
        </p>
        <a href="/" class="inline-block px-6 py-3 bg-secondary text-secondary-foreground rounded-lg font-medium hover:bg-secondary/80 transition-colors">
          Volver a la tienda
        </a>
      </div>
    </div>
  </div>

  <script define:vars={{ token }}>
    const loadingState = document.getElementById('loading-state');
    const successState = document.getElementById('success-state');
    const errorState = document.getElementById('error-state');
    const noTokenState = document.getElementById('no-token-state');
    const successMessage = document.getElementById('success-message');
    const successEmail = document.getElementById('success-email');
    const errorMessage = document.getElementById('error-message');

    function showState(state) {
      loadingState?.classList.add('hidden');
      successState?.classList.add('hidden');
      errorState?.classList.add('hidden');
      noTokenState?.classList.add('hidden');
      state?.classList.remove('hidden');
    }

    async function processUnsubscribe() {
      if (!token) {
        showState(noTokenState);
        return;
      }

      try {
        const response = await fetch(`/api/newsletter/unsubscribe?token=${encodeURIComponent(token)}`);
        const result = await response.json();

        if (result.success) {
          if (successMessage) successMessage.textContent = result.message;
          if (successEmail && result.email) {
            successEmail.textContent = `Email: ${result.email}`;
          }
          showState(successState);
        } else {
          if (errorMessage) errorMessage.textContent = result.error || result.message || 'Error desconocido';
          showState(errorState);
        }
      } catch (error) {
        if (errorMessage) errorMessage.textContent = 'Error de conexión. Por favor, inténtalo de nuevo.';
        showState(errorState);
      }
    }

    processUnsubscribe();
  </script>
</PublicLayout>
